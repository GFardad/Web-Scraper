# DEPLOYMENT COMMANDS
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

deploy: prerequisites env-check
	@echo "ğŸš€ Deploying Scraper Stack..."
	docker-compose up -d --build
	@echo ""
	@echo "âœ… Stack deployed successfully!"
	@echo ""
	@echo "ğŸ“Š Access points:"
	@echo "  - Health Check: http://localhost:8080/health"
	@echo "  - Prometheus:   http://localhost:9091"
	@echo "  - Postgres:     localhost:5432"
	@echo "  - MongoDB:      localhost:27017"
	@echo ""
	@echo "ğŸ“ View logs:"
	@echo "  make logs"
	@echo ""

up:
	@echo "â–¶ï¸  Starting containers..."
	docker-compose up -d

down:
	@echo "â¹ï¸  Stopping containers..."
	docker-compose down

restart:
	@echo "ğŸ”„ Restarting containers..."
	docker-compose restart

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# LOGGING COMMANDS
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

logs:
	docker-compose logs -f --tail=100 scraper

logs-all:
	docker-compose logs -f --tail=50

logs-postgres:
	docker-compose logs -f postgres

logs-mongo:
	docker-compose logs -f mongo

logs-ollama:
	docker-compose logs -f ollama

logs-paddleocr:
	docker-compose logs -f paddleocr

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# BUILD & CLEANUP
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

build:
	@echo "ğŸ”¨ Building Docker images..."
	docker-compose build --no-cache

clean:
	@echo "ğŸ§¹ Cleaning up containers..."
	docker-compose down --remove-orphans
	@echo "âœ… Cleanup complete (volumes preserved)"

destroy:
	@echo "âš ï¸  WARNING: This will DELETE ALL DATA including volumes!"
	@read -p "Are you sure? Type 'yes' to confirm: " confirm; \
	if [ "$$confirm" = "yes" ]; then \
		docker-compose down -v --remove-orphans; \
		echo "ğŸ’¥ Everything destroyed!"; \
	else \
		echo "âŒ Cancelled"; \
	fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# VALIDATION & TESTING
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

prerequisites:
	@echo "ğŸ” Checking prerequisites..."
	@./scripts/check_prerequisites.sh

validate:
	@echo "âœ… Validating config.yaml..."
	@python -c "import yaml; yaml.safe_load(open('config.yaml'))" && echo "Config is valid!" || echo "âŒ Config has errors!"

test:
	@echo "ğŸ§ª Running integration tests..."
	docker exec scraper-app pytest tests/test_integration.py -v

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ENVIRONMENT SETUP
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

env:
	@if [ ! -f .env ]; then \
		echo "ğŸ“ Creating .env from .env.example..."; \
		cp .env.example .env; \
		echo "âœ… Created .env - Please edit it with your credentials!"; \
	else \
		echo "âš ï¸  .env already exists, skipping"; \
	fi

env-check:
	@if [ ! -f .env ]; then \
		echo "âŒ .env file not found! Run: make env"; \
		exit 1; \
	fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# GPU & NVIDIA TOOLKIT
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

install-nvidia-toolkit:
	@echo "ğŸ”§ Installing NVIDIA Container Toolkit..."
	@./scripts/install_nvidia_toolkit.sh

gpu-test:
	@echo "ğŸ§ª Testing GPU access in Docker..."
	docker run --rm --gpus all nvidia/cuda:12.0.0-base-ubuntu22.04 nvidia-smi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# MAINTENANCE
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

status:
	@echo "ğŸ“Š Container Status:"
	@docker-compose ps

stats:
	@echo "ğŸ“ˆ Resource Usage:"
	@docker stats --no-stream

shell:
	docker exec -it scraper-app /bin/bash

db-shell:
	docker exec -it scraper-postgres psql -U scraper -d scraper_db

mongo-shell:
	docker exec -it scraper-mongo mongosh --username scraper --authenticationDatabase admin

redis-cli:
	docker exec -it scraper-redis redis-cli -a $$(grep REDIS_PASSWORD .env | cut -d '=' -f2)
