# Environment Configuration
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///commercial_scraper.db

# Proxy Configuration (optional - leave empty to disable proxy usage)
ENABLE_PROXIES=true

# Browser Configuration
HEADLESS_MODE=true

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Admin Dashboard Port
DASHBOARD_PORT=8501

# Test URL (optional - for initial verification, remove in production)
# TEST_URL=https://www.digikala.com/product/dkp-13353869
TEST_URL=https://www.digikala.com/product/dkp-13353869
