# ═══════════════════════════════════════════════════════════════════
# ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to `.env` and fill in your values
#═══================================================================

# ─────────────────────────────────────────────────────────────────
# DATABASE PASSWORDS
# ─────────────────────────────────────────────────────────────────
POSTGRES_PASSWORD=your_secure_postgres_password_here
MONGO_PASSWORD=your_secure_mongo_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# ─────────────────────────────────────────────────────────────────
# GPU CONFIGURATION
# ─────────────────────────────────────────────────────────────────
# GPU device ID (usually 0 for single GPU)
CUDA_VISIBLE_DEVICES=0

# Maximum VRAM allocation (GB)
MAX_VRAM_GB=3.0

# ─────────────────────────────────────────────────────────────────
# PAID SERVICES (LAST RESORT - Leave empty to disable)
# ─────────────────────────────────────────────────────────────────
# BrightData Proxy Service (only if local proxies fail)
BRIGHTDATA_API_KEY=

# 2Captcha Enterprise (only if local CAPTCHA solving fails)
CAPTCHA_API_KEY=

# ─────────────────────────────────────────────────────────────────
# NOTIFICATIONS (Optional)
# ─────────────────────────────────────────────────────────────────
# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email alerts
EMAIL_USERNAME=
EMAIL_PASSWORD=
ADMIN_EMAIL=

# ─────────────────────────────────────────────────────────────────
# DEPLOYMENT SETTINGS
# ─────────────────────────────────────────────────────────────────
# Environment (development, staging, production)
ENVIRONMENT=production

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
